<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="example.conference">
<body>

<metal:body fill-slot="body">
    <tal:body-macro metal:define-macro="body">


      <div class="container-fluid mt-n3">

	<!--<div tal:replace="structure provider:plone.abovecontenttitle" />-->

        <div class="row">
          <div class="col-md-12">
            <h1 tal:condition="context/show_title" class="d-none d-sm-none d-lg-block display-2" tal:content="context/title" />
            <h1 tal:condition="context/show_title" class="d-none d-sm-block d-lg-none  mt-n3 display-3" tal:content="context/title" />
            <h2 tal:condition="context/show_title" class="d-sm-none mt-n5" tal:content="context/title" />
          </div>
        </div>

	<!--<div tal:replace="structure provider:plone.belowcontenttitle" />-->

        <p tal:condition="context/show_description" class="documentDescription" tal:content="context/description" />

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div tal:condition="context/text" class="row mb-3">
          <div class="col-12">
            <span tal:replace="structure context/text/output"/>
          </div>
	</div>			

	<div class="row mb-3" tal:repeat="pageitem view/pagecontents"><!-- Start Iteration Pageitems -->


          <!-- Vorschau stage -->		
          <div id="vorschau-stage" tal:condition="python: pageitem.portal_type == 'Vorschau' and pageitem.blockshape == 'stage'">
            <div class="stage-image">
              <img tal:attributes="src string:${pageitem/absolute_url}/@@images/image" class="img-fluid">
            </div>  
            <div class="stage-overlay">
              <div class="col-12 col-md-8 offset-md-2">
                <p class="text-white roof text-uppercase m-0" tal:content="pageitem/dachzeile"/>
                <h1 class="text-white mb-2" tal:content="pageitem/title"/>
                <a class="more-link text-white" tal:attributes="href python:pageitem.format_link()" tal:content="pageitem/linktitle">Mehr erfahren</a>
              </div>
            </div>
          </div>
	  <!-- Ende Vorschau stage -->


	  <!-- Vorschau left-top -->
          <div tal:condition="python: pageitem.portal_type == 'Vorschau' and pageitem.blockshape == 'left-top'"
               tal:attributes="id pageitem/id;
	                       class string:container-fluid mb-5 ${pageitem/blockclass}">
	    <div class="row mt-5">
              <div class="col-md-3 d-none d-md-block"></div>
	      <div class="col-12 col-md-4">
                <img tal:attributes="src string:${pageitem/absolute_url}/@@images/image/large" class="img-fluid">
	      </div>
              <div class="col-md-5 d-none d-md-block"></div>
	    </div>
	    <div class="row mt-5">
              <div class="col-md-5 d-none d-md-block"></div>
	      <div class="col-12 col-md-5">
                <p class="roof text-uppercase" tal:content="pageitem/dachzeile"/>
                <h2 tal:content="pageitem/title"/>
		<p tal:content="pageitem/description"/>
                <a class="more-link" tal:attributes="href python:pageitem.format_link()" tal:content="pageitem/linktitle">Mehr erfahren</a>
              </div>
              <div class="col-md-3 d-none d-md-block"></div>
	    </div>
	  </div>
	  <!-- Ende Vorschau left-top -->


	  <!-- Vorschau right-top -->
          <div tal:condition="python: pageitem.portal_type == 'Vorschau' and pageitem.blockshape == 'right-top'"
               tal:attributes="id pageitem/id;
                               class string:container-fluid mb-5 ${pageitem/blockclass}">
            <div class="row mt-5">
              <div class="col-md-5 d-none d-md-block"></div>
              <div class="col-12 col-md-4">
                <img tal:attributes="src string:${pageitem/absolute_url}/@@images/image/large" class="img-fluid">
              </div>
              <div class="col-md-3 d-none d-md-block"></div>
            </div>
            <div class="row mt-5">
              <div class="col-md-3 d-none d-md-block"></div>
              <div class="col-12 col-md-5">
                <p class="roof text-uppercase" tal:content="pageitem/dachzeile"/>
                <h2 tal:content="pageitem/title"/>
                <p tal:content="pageitem/description"/>
                <a class="more-link" tal:attributes="href python:pageitem.format_link()" tal:content="pageitem/linktitle">Mehr erfahren</a>                     
              </div>
              <div class="col-md-5 d-none d-md-block"></div>
            </div>
          </div>
	  <!-- Ende Vorschau right-top -->


          <!-- Vorschau left-bottom -->
          <div tal:condition="python: pageitem.portal_type == 'Vorschau' and pageitem.blockshape == 'left-bottom'"
               tal:attributes="id pageitem/id;
                               class string:container-fluid mb-5 ${pageitem/blockclass}">
            <div class="row mt-5">
              <div class="col-md-5 d-none d-md-block"></div>
              <div class="col-12 col-md-5">
                <p class="roof text-uppercase" tal:content="pageitem/dachzeile"/>
                <h2 tal:content="pageitem/title"/>
                <p tal:content="pageitem/description"/>
                <a class="more-link" tal:attributes="href python:pageitem.format_link()" tal:content="pageitem/linktitle">Mehr erfahren</a>                     
              </div>
              <div class="col-md-3 d-none d-md-block"></div>
            </div>
            <div class="row mt-5">
              <div class="col-md-3 d-none d-md-block"></div>
              <div class="col-12 col-md-4">
                <img tal:attributes="src string:${pageitem/absolute_url}/@@images/image/large" class="img-fluid">
              </div>
              <div class="col-md-5 d-none d-md-block"></div>
            </div>
          </div>
          <!-- Ende Vorschau left-bottom -->


          <!-- Vorschau right-bottom -->
          <div tal:condition="python: pageitem.portal_type == 'Vorschau' and pageitem.blockshape == 'right-bottom'"
               tal:attributes="id pageitem/id;
                               class string:container-fluid mb-5 ${pageitem/blockclass}">
            <div class="row mt-5">
              <div class="col-md-3 d-none d-md-block"></div>
              <div class="col-12 col-md-5">
                <p class="roof text-uppercase"  tal:content="pageitem/dachzeile"/>
                <h2 tal:content="pageitem/title"/>
                <p tal:content="pageitem/description"/>
                <a class="more-link" tal:attributes="href python:pageitem.format_link()" tal:content="pageitem/linktitle">Mehr erfahren</a>                     
              </div>
              <div class="col-md-5 d-none d-md-block"></div>
            </div>
            <div class="row mt-5">
              <div class="col-md-5 d-none d-md-block"></div>
              <div class="col-12 col-md-4">
                <img tal:attributes="src string:${pageitem/absolute_url}/@@images/image/large" class="img-fluid">
              </div>
              <div class="col-md-3 d-none d-md-block"></div>
            </div>
          </div>
          <!-- Ende Vorschau right-bottom -->


          <!-- Vorschau Textblock -->
          <div tal:condition="python: pageitem.portal_type == 'Vorschau' and pageitem.blockshape == 'textblock'"
               tal:attributes="id pageitem/id;
                               class string:container-fluid mb-5 ${pageitem/blockclass} textblock">
            <div class="row mt-5">
              <div class="col-md-4 d-none d-md-block"></div>
              <div class="col-12 col-md-5">
                <span tal:replace="structure pageitem/text/output"/>
              </div>
              <div class="col-md-3 d-none d-md-block"></div>
            </div>
          </div>
          <!-- Ende Vorschau Textblock -->


          <!-- Folder & Collection -->
	  <div style="width:100% !important" tal:condition="python: pageitem.portal_type in ['Collection', 'Folder']"
	       tal:attributes="id pageitem/id;
	                       class pageitem/deckclass">

            <!-- Shape 1-4-0 -->		  
            <div tal:condition="python: pageitem.deckshape == '1-4-0'" class="container-fluid py-5"
		 tal:define="itemcontent python:view.getCollectionEntries(pageitem);
                             deck python:itemcontent.get('cards');
                             morelink python:itemcontent.get('morelink')">
	      <div class="row">	    
	        <div class="col-md-2 d-none d-md-block"></div>
	        <div class="col-12 col-md-8">
            <div class="section-header" tal:content="pageitem/title">Section Title</div>
	          <div class="card-deck mb-3">
		    <div tal:repeat="item deck" class="card border-0" 
                         tal:attributes="class string:card border-0 ${pageitem/deckclass} m-0">
			<!--<img tal:attributes="src python:item.get('img-preview')" class="card-img-top">-->
                        <div tal:condition="python: not item.get('img-mini') and item.get('video')" 
                             tal:attributes="class python:item['video']['videoformat']">
                          <span tal:replace="structure item/video/embed"/>
                        </div>
                        <div class="card-body">
		          <img tal:attributes="src python:item.get('img-preview')" style="max-width:50%" class="img-fluid">
			  <h6 class="mt-3" style="font-weight:bold;" tal:content="item/title"/>
			  <p style="font-size:12pt; color:#555555" tal:content="item/description"/>
			  <p tal:condition="python:item.get('type')=='Event'" style="font-size:12pt; color:#000000; font-weight:bold">
			    <span tal:content="item/fullevent"/>
		          </p>
                        </div>
                        <a href="#" tal:attributes="href item/url" class="stretched-link"></a>
                    </div>
                  </div>
	          <a class="float-right mr-4" tal:condition="morelink" tal:attributes="href pageitem/absolute_url" tal:content="morelink"/>
	        </div>
	        <div class="col-md-2 d-none d-md-block"></div>
	      </div>
	    </div>
	    <!-- Ende Shape 1-4-0 -->

            <!-- Shape 2-3-4 -->
            <div tal:condition="python: pageitem.deckshape == '2-3-4'" class="container-fluid py-5"
                 tal:define="itemcontent python:view.getCollectionEntries(pageitem);
                             decks python:itemcontent.get('cards');
                             morelink python:itemcontent.get('morelink')">
              <div class="row">
                <div class="col-md-2 d-none d-md-block"></div>
                <div class="col-12 col-md-8">
                  <div class="section-header" tal:content="pageitem/title">Section Title</div>
                  <div tal:define="deck python: decks[0]" tal:condition="deck" class="card-deck mb-3">
                    <div tal:repeat="item deck" class="card border-0" tal:attributes="class string:card border-0 ${pageitem/deckclass}">
                      <a tal:attributes="href item/url">
                        <img tal:attributes="src python:item.get('img-preview')" class="card-img-top">
                        <div tal:condition="python: not item.get('img-preview') and item.get('video')" 
                             tal:attributes="class python:item['video']['videoformat']">
                          <span tal:replace="structure item/video/embed"/>
                        </div>
                        <div class="card-body pl-0 pr-0">
                          <h6 style="font-weight:bold;" tal:content="item/title"/>
                          <p style="font-size:12pt; color:#555555" tal:content="item/description"/>
                          <p tal:condition="python:item.get('type')=='Event'" style="font-size:12pt; color:#000000; font-weight:bold">
                            <span tal:content="item/fullevent"/>
                          </p>
                        </div>
                      </a>
                    </div>
                  </div>
                </div>
                <div class="col-md-2 d-none d-md-block"></div>
              </div>
	      <div class="row">
	        <div class="col-md-2 d-none d-md-block"></div>
		<div class="col-12 col-md-8"><hr></div>
	        <div class="col-md-2 d-none d-md-block"></div>
              </div>		
              <div class="row">
                <div class="col-md-2 d-none d-md-block"></div>
                <div class="col-12 col-md-8">
                  <div tal:define="deck python: decks[1]" tal:condition="deck" class="card-deck mb-3">
                    <div tal:repeat="item deck" class="card border-0" tal:attributes="class string:card border-0 ${pageitem/deckclass}">
                      <a tal:attributes="href item/url">
                        <img tal:attributes="src python:item.get('img-thumb')" class="pl-0 pt-3 pr-3 pb-3">
                        <div tal:condition="python: not item.get('img-thumb') and item.get('video')" 
                             tal:attributes="class python:item['video']['videoformat']">
                          <span tal:replace="structure item/video/embed"/>
                        </div>
                        <div class="card-body pl-0 pr-0">
			  <p style="font-size:12pt; color:#555555" tal:content="item/dachzeile"/>
                          <h6 style="font-weight:bold;" tal:content="item/title"/>
                          <p tal:condition="python:item.get('type')=='Event'" style="font-size:12pt; color:#000000; font-weight:bold">
                            <span tal:content="item/fullevent"/>
                          </p>
                        </div>
                      </a>
                    </div>
                  </div>
                  <a class="float-right mr-4" tal:condition="morelink" tal:attributes="href pageitem/absolute_url" tal:content="morelink"/>
                </div>
                <div class="col-md-2 d-none d-md-block"></div>
              </div>

            </div>
            <!-- Ende Shape 2-3-4 -->

          </div>
	  <!-- Ende Folder & Collection -->


          <!-- Old Template Snippets -->
	  <!-- Card -->
          <div tal:condition="python: pageitem.portal_type == 'Document'" class="col-12">
            <a name="" tal:attributes="name python:pageitem.getId()"/>
            <h2 tal:content="pageitem/title"/>
            <p tal:condition="pageitem/description" class="documentDescription" tal:content="pageitem/description"/>
            <span tal:condition="pageitem/text" tal:replace="structure pageitem/text/output"/>
          </div>
	  <!-- Ende Card -->


	  <!-- Document -->
          <div tal:condition="python: pageitem.portal_type == 'Card'" tal:attributes="class pageitem/cardclass">
            <a name="" tal:attributes="name python:pageitem.getId()"/>
            <img tal:condition="pageitem/cardimage" class="card-img-top" tal:attributes="src python:pageitem.absolute_url() + '/@@images/cardimage';
                                                                                         title pageitem/title;
                                                                                         alt pageitem/image_caption">
	    <div tal:condition="pageitem/cardheader" class="card-header" tal:content="pageitem/cardheader"/>
            <div class="card-body" tal:attributes="class pageitem/cardbodyclass">
              <h5 class="card-title" tal:content="pageitem/title">
              <p tal:condition="pageitem/description" class="card-text" tal:content="pageitem/description"/>
              <a tal:condition="pageitem/calltoaction" tal:content="pageitem/buttontext" 
	         tal:attributes="href python:pageitem.calltoaction.to_object.absolute_url(); 
                                 class pageitem/buttonclass"/>
            </div>
            <div tal:condition="pageitem/cardfooter" class="card-footer text-muted">
              <span tal:replace="pageitem/cardfooter"/>
            </div>
	  </div>
	  <!-- Ende Dokument -->

	  <!-- Link -->
          <div tal:condition="python: pageitem.portal_type == 'Link'" class="col-12 col-md-4">
            <a name="" tal:attributes="name python:pageitem.getId()"/>
            <a href="" tal:attributes="href python:view.getRemote(pageitem); title pageitem/title">
              <img tal:condition="pageitem/image" class="img-fluid rounded" 
                   tal:attributes="src python: pageitem.absolute_url() + '/@@images/image';
                                     title pageitem/title;
                                     alt pageitem/image_caption;">
            </a>                
          </div>

          <div tal:condition="python: pageitem.portal_type == 'Link'" class="col-12 col-md-8">
            <a href="" tal:attributes="href python:view.getRemote(pageitem); title pageitem/title">
              <h2 class="mt-3" tal:content="pageitem/title"/>
              <p class="documentDescription" tal:content="pageitem/description"/>
            </a>  
          </div>
	  <!-- Ende Link -->
	  <!-- Ende Old Template Snippets -->



	</div><!-- Ende Pageitems -->

	<div class="container">
        <div class="row">
          <div class="col-12">
            <div tal:replace="structure provider:plone.belowcontentbody" />
          </div>
        </div>
	</div>


      </div>

    </tal:body-macro>
</metal:body>

</body>
</html>

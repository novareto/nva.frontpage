<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
   xmlns:tal="http://xml.zope.org/namespaces/tal"
   xmlns:metal="http://xml.zope.org/namespaces/metal"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n"
   lang="en"
   metal:use-macro="context/main_template/macros/master"
   i18n:domain="example.conference">
   <body>
      <metal:body fill-slot="body" >
         <tal:body-macro metal:define-macro="left-top">
            <!-- Vorschau left-top -->
            <!--  Wird aus Vorschau aufgerufen -->
            <div tal:condition="python: hasattr(view, 'vorschau')"
               tal:attributes="id python: view.context.id;
               class string:container-fluid mb-5 ${python: view.vorschau.get('blockclass')}">
               <div class="row mt-5">
                  <div class="col-md-3 d-none d-md-block"></div>
                  <div class="col-12 col-md-4">
                     <img tal:attributes="src string:${python:view.vorschau.get('url')}/@@images/image/large" class="img-fluid">
                  </div>
                  <div class="col-md-5 d-none d-md-block"></div>
               </div>
               <div class="row mt-5">
                  <div class="col-md-5 d-none d-md-block"></div>
                  <div class="col-12 col-md-4">
                     <h5 tal:content="python:view.vorschau.get('dachzeile')"/>
                     <h1 class="display-4" tal:content="python:view.vorschau.get('title')"/>
                     <p tal:content="python:view.vorschau.get('description')"/>
                        <a tal:attributes="href python:view.vorschau.get('verweis')" tal:content="python:view.vorschau.get('linktitle')">mehr erfahren</a>
                  </div>
                  <div class="col-md-3 d-none d-md-block"></div>
               </div>
            </div>
            <!--  Wird aus Landingpage aufgerufen -->
            <div tal:condition="python: not hasattr(view, 'vorschau')"
               tal:attributes="id python: view.context.id;
               class string:container-fluid mb-5 ${python:pageitem.blockclass}">
               <div class="row mt-5">
                  <div class="col-md-3 d-none d-md-block"></div>
                  <div class="col-12 col-md-4">
                     <img tal:attributes="src string:${python:pageitem.url}/@@images/image/large" class="img-fluid">
                  </div>
                  <div class="col-md-5 d-none d-md-block"></div>
               </div>
               <div class="row mt-5">
                  <div class="col-md-5 d-none d-md-block"></div>
                  <div class="col-12 col-md-4">
                     <h5 tal:content="python:pageitem.dachzeile"/>
                     <h1 class="display-4" tal:content="python:pageitem.title"/>
                     <p tal:content="python:pageitem.description"/>
                        <a tal:attributes="href python:pageitem.verweis" tal:content="python:pageitem.linktitle">mehr erfahren</a>
                  </div>
                  <div class="col-md-3 d-none d-md-block"></div>
               </div>
            </div>
            <!-- Ende Vorschau left-bottom -->
         </tal:body-macro>
      </metal:body>
   </body>
</html>


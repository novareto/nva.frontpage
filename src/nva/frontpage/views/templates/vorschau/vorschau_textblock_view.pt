<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
   xmlns:tal="http://xml.zope.org/namespaces/tal"
   xmlns:metal="http://xml.zope.org/namespaces/metal"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n"
   lang="en"
   metal:use-macro="context/main_template/macros/master"
   i18n:domain="example.conference">
   <body>
      <metal:body fill-slot="body" >
         <tal:body-macro metal:define-macro="textblock">
            <!-- Vorschau textblock -->
            <!--  Wird aus Vorschau aufgerufen -->
            <div tal:condition="python: hasattr(view, 'vorschau')"
               tal:attributes="id python: view.context.id;
               class string:container-fluid mb-5 ${python: view.vorschau.get('blockclass')}">
               <div class="row mt-5">
                  <div class="col-md-4 d-none d-md-block"></div>
                  <div class="col-12 col-md-4">
                     <span tal:replace="structure python: view.vorschau.get('text').output"/>
                  </div>
                  <div class="col-md-5 d-none d-md-block"></div>
               </div>
            </div>
            <div tal:condition="python: not hasattr(view, 'vorschau')"
               tal:attributes="id python: view.context.id;
               class string:container-fluid mb-5 ${python:pageitem.blockclass}">
               <div class="row mt-5">
                  <div class="col-md-4 d-none d-md-block"></div>
                  <div class="col-12 col-md-4">
                     <span tal:replace="structure python: pageitem.text.output"/>
                  </div>
                  <div class="col-md-5 d-none d-md-block"></div>
               </div>
            </div>
            <!-- Ende Vorschau Textblock -->
         </tal:body-macro>
      </metal:body>
   </body>
</html>

